{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "server/src/server.ts"
    },
    {
      "source": "/assets/(.*)",
      "destination": "client/dist/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "client/dist/index.html"
    }
  ]
}